<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical" android:layout_width="fill_parent"
              android:layout_height="fill_parent" android:background="#E0E0E0">
    <RelativeLayout
        style="@style/TrackerActionBar"
        android:layout_width="fill_parent"
        android:gravity="center_vertical"
        >

        <TextView android:id="@+id/umeng_fb_conversation_title"
                  android:layout_width="fill_parent"
                  android:textColor="@color/snowhite"
                  android:layout_height="fill_parent"
                  android:layout_gravity="center_vertical"
                  android:gravity="center_vertical"
                  android:layout_marginLeft="14dp"
                  android:text="@string/menu_feedback"
                  android:textSize="16dip" />

        <ImageButton android:id="@+id/umeng_fb_imgBtn_submitFb"
                     android:layout_marginRight="8dip"
                     android:layout_centerVertical="true"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_alignParentRight="true"
                     android:background="@color/gray" />
    </RelativeLayout>

    <ListView android:id="@+id/android:list"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:scrollingCache="false"
              android:fadingEdge="none"
              android:divider="@color/divider"
              android:dividerHeight="1px"
              android:cacheColorHint="@color/highlight"
        />
</LinearLayout>
