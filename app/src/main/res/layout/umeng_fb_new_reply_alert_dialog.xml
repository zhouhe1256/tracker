<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
    >
    <LinearLayout
        android:layout_margin="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="@color/snowhite"
        >
        <TextView android:id="@+id/umeng_fb_new_reply_alert_title"
                  android:text="您的反馈收到了回复"
                  style="@style/TrackerActionBar"
                  android:textColor="@color/snowhite"
                  android:gravity="center_vertical"
                  android:paddingLeft="15dp"
                  android:textSize="14sp"
            />
        <TextView android:id="@+id/umeng_fb_new_dev_reply_box"
                  android:gravity="center"
                  android:text="This is the reply from dev" android:layout_marginTop="10dip"
                  android:textSize="18dip" android:textColor="@color/highlight"
                  android:layout_width="fill_parent" android:layout_height="wrap_content"
                  android:layout_marginLeft="15dip"
                  android:layout_marginRight="15dip"
                  android:minHeight="100dp"
            />

        <View android:layout_height="3dip"
              android:layout_width="fill_parent"
              android:layout_marginTop="3dip"
              android:background="@drawable/time_background_border_bottom" />

        <LinearLayout android:layout_width="fill_parent"
                      android:layout_height="wrap_content" android:layout_gravity="bottom"
                      android:orientation="horizontal"
                      android:background="@drawable/time_background">
            <Button android:id="@+id/umeng_fb_exitBtn"
                    style="@style/BigStartButton"
                    android:textColor="#FFFFFF"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/UMFeedbackGotIt"
                    android:layout_weight="1"
                />
            <Button android:id="@+id/umeng_fb_see_detail_btn"
                    android:text="@string/UMFeedbackSeeDetail"
                    android:layout_marginTop="10dip"
                    android:layout_marginLeft="10dp"
                    style="@style/BigEndButton"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
