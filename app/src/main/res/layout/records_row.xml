<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="65dp"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        >
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/time"
            android:textSize="10sp"
            android:text="12-24"
            android:singleLine="true"
            android:textColor="@color/title"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/distance_layout"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="20dp"
        >
        <LinearLayout
            android:id="@+id/cost_time_layout"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="37dp"
            android:layout_height="match_parent">

            <ImageView android:src="@drawable/times"
                android:layout_marginRight="5dp"
                android:layout_height="10dp"
                android:layout_width="wrap_content"
                />

            <TextView
                android:id="@+id/cost_time"
                android:text="00:33:223"
                style="@style/SecondTitle"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/cost_s_layout"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_height="match_parent">

            <ImageView android:src="@drawable/second"
                android:layout_marginRight="5dp"
                android:layout_height="10dp"
                android:layout_width="wrap_content"
                />

            <TextView
                android:id="@+id/cost_s"
                android:text="00'00"
                style="@style/SecondTitle"
                />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:layout_height="wrap_content">

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/distance"
                  android:textSize="30sp"
                  android:text="19.9"
                  android:singleLine="true"
                  android:textColor="@color/title"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="@string/km"
            />

    </LinearLayout>
</RelativeLayout>
